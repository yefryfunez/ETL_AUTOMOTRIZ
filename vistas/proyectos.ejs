
<%-include('plantillas/cabecera', {titulo: 'ejecutar_etl'})%>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Proyectos</a>
          </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/nuevo_proyecto">Nuevo proyecto</a>
        </li>
      </ul>
    </div>
  </div>
</nav>


<div class="container" style="max-width: 450px"> 


    
  <form action="/obtener_proyecto" method="post">
          <h4>Poyectos guardados</h4>
          <hr>
        <table class="table table-borderless">

          <tbody>
            <% lista_proyectos.forEach((elemento, index) => { %>
              <tr>
                <td>
                  <button name="proyecto" type="submit" onclick="this.form.submit()" value="<%=elemento%>"><%=elemento%></button>
                </td>
                <td>
                  <button style="background-color: #ac1400; color: #fff; padding: 3px 7px; border: none; border-radius: 4px; cursor: pointer; margin: 8px;" 
                                  name="eliminar_proyecto" type="submit" onclick="this.form.submit()" value=<%=index %>>eliminar</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
  </form>
            <% if (mensaje != '_') { %>
              <div>
                  <%=mensaje %>
              </div>
          <% } %>

</div>


</body>
</html>